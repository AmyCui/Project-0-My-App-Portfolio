<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amy.android.myappportfolio.MainActivity"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/colorFrontBkg"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    >

    <TextView
        android:text="@string/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:text="Popular Movies"
        android:id="@+id/popularMovies_Btn"
        style="@style/ButtonMainActivity"
        android:onClick="displayToast"/>

    <Button
        android:text="STOCK HAWK"
        android:id="@+id/stockHawk_Btn"
        style="@style/ButtonMainActivity"
        android:onClick="displayToast"/>/>

    <Button
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildItBigger_Btn"
        style="@style/ButtonMainActivity"
        android:onClick="displayToast"/>/>

    <Button
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/makeYourAppMaterial_Btn"
        style="@style/ButtonMainActivity"
        android:onClick="displayToast"/>/>

    <Button
        android:text="GO UBIQUITOUS"
        android:id="@+id/goUbiquitous_Btn"
        style="@style/ButtonMainActivity"
        android:onClick="displayToast"/>/>

    <Button
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstone_Btn"
        style="@style/ButtonAccentMainActivity"
        android:onClick="displayToast"/>/>
</LinearLayout>
